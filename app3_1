public class app3
{
   public static void main(String args[]) throws Exception
   {
      int i=0;
      while(i<100){
         	i++;
		System.out.print("\r");
		System.out.print("|  "+i+"%");
		Thread.sleep(50);	
		System.out.print("\r");
		System.out.print("/  "+i+"%");
		Thread.sleep(50);
		System.out.print("\r");
		System.out.print("-  "+i+"%");
		Thread.sleep(50);
		System.out.print("\r");
		System.out.print("\\  "+i+"%");
		Thread.sleep(50);	
      }
           
   }
}
